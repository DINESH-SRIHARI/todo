                </form>
            </div>
            
        </div>
      <%}%>
      <%if(all.length>0){%>
      <form method="post" action="/deleteall">
        <button class="btn btn-danger m-5 px-3">Remove All Tasks</button>
      </form>
      <%} else{%>
        <h1 class="mx-5">No task Added</h1>
        <a class="btn btn-dark mx-5" href="/add">Add New Task</a>
        <%}%>
    </div>
</div>
