<div class="row justify-content-center">
    <div class="col-md-6 my-5">
        <%for(let i=0;i<all.length;i++){%>
            <div class="m-2">
            
            <div class="d-flex aline">
                <input type="checkbox" class="mx-3">
                <td class="mx-3 p"><%=all[i].title%></td>
                <form class="mx-3" method="post" action="/deleteOne">
                    <button class="btn btn-light mx-2"  value='<%=all[i].title%>' name="mail">
